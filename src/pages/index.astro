---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import BriefcaseIcon from "../components/icons/Briefcase.astro";
import MailIcon from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout
  title="Portafolio de andrei - Desarrollador y Programador Web con más de 1 año de experiencia"
  description=""
>
  <main class="px-4">
    <SectionContainer class="py-20 pb-24">
      <div class="flex flex-col-reverse sm:flex-row items-center">
        <div>
          <h1
            class="text-white text-3xl md:text-4xl lg:text-5xl font-semibold flex flex-col sm:flex-row gap-4 pb-6 lg:pb-10 items-start sm:items-center"
          >
            Hola, soy Andrei
          </h1>
          <h2 class="text-xl lg:text-2xl text-wrap max-w-[650px]">
            <span>+1 año de experiencia.</span>
            <span class="opacity-80 text-blue-300">Desarrollador Frontend.</span
            >
            <span class="text-fuchsia-200/80"> De Lima, Perú.</span>
            <span class="opacity-75"
              >Especializado en crear interfaces únicas</span
            >
          </h2>
        </div>
      </div>
      <nav class="flex gap-4 mt-8 sm:mt-0 lg:mt-8 flex-wrap">
        <SocialPill href="https://github.com/Andreidlpy">
          <GitHubIcon class="size-4 lg:size-6" />
          Github
        </SocialPill>
        <SocialPill
          href="https://www.linkedin.com/in/andrei-de-la-puente-093a09198/"
        >
          <LinkedInIcon class="size-4 lg:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="mailto:dyausinoh@gmail.com">
          <MailIcon class="size-4 lg:size-6" />
          dyausinoh@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <div class="space-y-24">
      <SectionContainer id="experiencia">
        <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
          <BriefcaseIcon class="size-6" /> Experiencia laboral
        </h2>
        <Experience />
      </SectionContainer>

      <SectionContainer id="proyectos">
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3">
          <CodeIcon class="size-6" /> Proyectos
        </h2>
        <div class="space-y-10">
          <Projects />
        </div>
      </SectionContainer>
      <SectionContainer id="sobre-mi">
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3">
          <CodeIcon class="size-6" /> Sobre mí
        </h2>
        <AboutMe />
      </SectionContainer>
    </div>
  </main>
</Layout>

